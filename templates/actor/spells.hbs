<section class="tab flexgrow">
  {{#if (gt (length traits) 0)}}
  <div class="items-section card">
    <div class="items-header header">
      <div class="item-name">{{localize "D12.Inventory.Trait"}}</div>
      <div class="item-header">{{localize "D12.Inventory.Charges"}}</div>
      <div class="item-header">{{localize "D12.Inventory.Roll"}}</div>
      <div class="item-header">
        <a
          class="action-icon edit-mode-only"
          data-action="itemCreate"
          title="{{localize 'DOCUMENT.Create' type='Spell'}}"
          data-type="spell"
        >
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </div>
    <ol class="item-list" data-item-type="spell">
      {{#each traits as |item id|}}
        {{> "systems/d12/templates/actor/item-table-row.hbs" item=item }}
      {{/each}}
    </ol>
  </div>
  {{/if}}

  <div class="items-section card">
    <div class="items-header header">
      <div class="item-name">{{localize "D12.Inventory.Spell"}}</div>
      <div class="item-header">{{localize "D12.Inventory.Charges"}}</div>
      <div class="item-header">{{localize "D12.Inventory.Roll"}}</div>
      <div class="item-header">
        <a
          class="action-icon edit-mode-only"
          data-action="itemCreate"
          title="{{localize 'DOCUMENT.Create' type='Spell'}}"
          data-type="spell"
        >
          <i class="fas fa-plus"></i>
        </a>
      </div>
    </div>
    <ol class="item-list" data-item-type="spell">
      {{#each spells as |item id|}}
        {{> "systems/d12/templates/actor/item-table-row.hbs" item=item }}
      {{/each}}
      {{#if (eq (length spells) 0)}}
        <li class="item">
          <div class="item-row">
            <div class="no-items grid-span-12 flexcol">{{localize "D12.Inventory.NoSpells"}}</div>
          </div>
        </li>
      {{/if}}
    </ol>
  </div>
</section>
