<section class="{{#if editable}}editable{{else}}locked{{/if}} {{actor.type}}"
  data-group="{{tab.group}}"
  data-tab="{{tab.id}}">
  {{!-- Sheet Body --}}
  <div class="grid sheet-grid flexcol">

    {{!-- Left column: sidebar with resources and image --}}
    <aside class="sidebar">
      <div class="sheet-art">
        <img src="{{actor.img}}"
          {{#if editable}} data-action="editImage" data-edit="img" {{/if}}
          title="{{actor.name}}" height="100" width="100"/>
      </div>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
      <div class="resources">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource">
          <label for="system.health.value" class="label">Health</label>
          {{#if editable}}
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" min="0" max="{{system.health.max}}" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
          </div>
          {{else}}
          <div class="resource-squares health-squares">
            {{#times system.health.max}}
            <div class="resource-square {{#if (lt this @root.system.health.value)}}filled health{{else}}empty{{/if}}"></div>
            {{/times}}
          </div>
          {{/if}}
        </div>

        {{#if editable}}
        <div class="resource">
          <label for="system.mana.value" class="label">Mana</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="number" min="0" max="{{system.mana.max}}" name="system.mana.value" value="{{system.mana.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="number" name="system.mana.max" value="{{system.mana.max}}" data-dtype="Number"/>
          </div>
        </div>
        {{else if (gt system.mana.max 0)}}
        <div class="resource">
          <label for="system.mana.value" class="label">Mana</label>
          <div class="resource-squares mana-squares">
            {{#times system.mana.max}}
            <div class="resource-square {{#if (lt this @root.system.mana.value)}}filled mana{{else}}empty{{/if}}"></div>
            {{/times}}
          </div>
        </div>
        {{/if}}

        {{!-- Effects Display --}}
        {{#if effects}}
        <div class="effects-section">
          <label class="label">Effects</label>
          <div class="effects-list">
            {{#each effects}}
            <div class="effect-item flexrow flex-between flex-center">
              <img src="{{this.img}}" width="20" height="20" />
              <div class="effect-name">{{this.name}}</div>
              {{#if @root.editable}}
              <a class="effect-remove" data-action="effectRemove" data-effect-id="{{this.id}}" title="Remove effect">
                <i class="fas fa-times"></i>
              </a>
              {{/if}}
            </div>
            {{/each}}
          </div>
        </div>
        {{/if}}

      </div>
    </aside>

    {{!-- Right column: main content with tabs --}}
    <section class="sheet-body flexcol">

      {{!-- Sheet Header --}}
      <header class="sheet-header flexcol">
        <div class="sheet-title">
          {{#if editable}}
          <input name="name" type="text" value="{{actor.name}}" placeholder="Name"/>
          {{else}}
          <div>{{actor.name}}</div>
          {{/if}}
        </div>
      </header>

      {{!-- Sheet Tab Navigation --}}
      <nav class="sheet-tabs flexrow ">
        {{!-- Default tab is specified in actor-sheet.mjs --}}
        <a class="item stats {{#if (eq activeTab "stats")}}active{{/if}}" data-action="changeTab" data-tab="stats"><i class="fas fa-star"></i> {{localize "D12.SheetLabels.Stats"}}</a>
        <a class="item items {{#if (eq activeTab "items")}}active{{/if}}" data-action="changeTab" data-tab="items"><i class="fas fa-flask-round-potion"></i> {{localize "D12.SheetLabels.Items"}}</a>
        <a class="item spells {{#if (eq activeTab "spells")}}active{{/if}}" data-action="changeTab" data-tab="spells"><i class="fas fa-fire"></i> {{localize "D12.SheetLabels.Spells"}}</a>
      </nav>

      {{!-- Sheet Content --}}
      <div class="flexgrow flexcol tab-content">
        {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
        <div class="actor-tab stats {{#unless (eq activeTab "stats")}}hidden{{/unless}}">
          {{#if (eq actor.type "npc")}}
            {{> "systems/d12/templates/actor/actor-npc-stats.hbs"}}
          {{else}}
            {{> "systems/d12/templates/actor/actor-character-stats.hbs"}}
          {{/if}}
        </div>
        <div class="actor-tab items {{#unless (eq activeTab "items")}}hidden{{/unless}}">
          {{> "systems/d12/templates/actor/actor-items.hbs"}}
        </div>
        <div class="actor-tab spells {{#unless (eq activeTab "spells")}}hidden{{/unless}}">
          {{> "systems/d12/templates/actor/actor-spells.hbs"}}
        </div>
      </div>
    </section>
  </div>
</section>
